#include <stdio.h>
#include <stdlib.h>

int main()
{
    float base, altura;

    printf("Introduce la base del ractangulao\n");
    scanf("%f", &base);
    printf("Introduce la altura del ractangulao\n");
    scanf("%f", &altura);
    float area = base + altura;

    printf("el area del rectangulo de base %.2f y altura %.2f es: %.2f", base, altura, area);
}
