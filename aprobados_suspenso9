#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n, contador_aprobados=0, contador_suspensos=0;
    float nota;

    printf("Introduce el numero del alumnos");
    scanf("%d",&n);
    
    for (int i = 1; i <=n; i++)
    {
        printf("Introduce la nota del alumno");
        scanf("%f",&nota);

        if (nota >= 5)
        {
            contador_aprobados++;
        }
        else {
            contador_suspensos++;
        }
        
    }
       
    printf("El numero de alumnos aprobados es: %d y el numero de alumnos suspensos es: %d", contador aprobados, contador_suspensos);
}
